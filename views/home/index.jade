extends ../layout

block head
  meta(name='description', content='linkgo.io web')
  meta(name='author', content='linkgo.io')
  title linkgo.io

  link(rel='stylesheet', type='text/css', href='/vendor/semantic/semantic.min.css')
  link(rel='stylesheet', type='text/css', href='/views/home/index.min.css')
  link(rel='stylesheet', type='text/css', href='/iconfonts/flaticon.min.css')
  link(rel='stylesheet', type='text/css', href='/animation/magic.min.css')

block feet
  script(src='/vendor/semantic/semantic.min.js')
  script(src='/views/home/index.min.js')
  script.
    $(function(){
      $('.ui.card').popup();
    });

block body
  #home
   .ui.fluid.container 

    .ui.inverted.masthead.centered.segment
        .column
          .ui.secondary.pointing.menu.mobile
            .ui.floating.dropdown.item
              i.flaticon-home
              = __("brand")
              i.dropdown.icon
              .menu
                //a.item(href="http://blog.linkgo.io/#open")
                  i.rss.icon
                  = __("home.blog")
                a.item(href="http://lab.linkgo.io/")
                  i.idea.icon
                  = __("home.lab")

            //.right.menu
              if user && user.username
                a.ui.item
                  i.user.icon
                  = user.username
              else
                a.ui.item(href="/login")
                  i.sign.in.icon
                  = __("home.login")

          .ui.secondary.pointing.menu.desktop
            a.active.item
              i.flaticon-home
              = __("brand")
            //a.item(href="http://blog.linkgo.io/#open")
              i.rss.icon
              = __("home.blog")
            a.item(href="http://lab.linkgo.io/")
              i.idea.icon
              = __("home.lab")

            //.right.menu
              if user && user.username
                a.ui.item
                  i.user.icon
                  = user.username
              else
                a.ui.item(href="/login")
                  i.sign.in.icon
                  = __("home.login")

          .ui.hidden.transition.information
            h1.ui.inverted.centered.header= __("home.slogan")
            p.ui.centered.lead= __("home.description")
            //a.large.basic.inverted.animated.fade.ui.button(href='/login')
              .visible.content= __("home.find_out_more")
              .hidden.content= __("home.login")
            //.ui.centerted.image
            //  img(src='images/home/banner.png')

    .ui.feature.vertical.segment
      .ui.three.column.center.aligned.stackable.grid
        .column.column-feature
          a.ui.icon.header(href="https://github.com/linkgo/neurite")
            i.tag.icon
            = __("neurite.name")
          p
            = __("neurite.description")
          //p
            a.ui.button(href='#')
              | Learn
        .column.column-feature
          .ui.icon.header
            i.exchange.icon
            = __("mqttCluster.name")
          p
            = __("mqttCluster.description")
          //p
            a.ui.green.right.labeled.icon.button(href='#')
